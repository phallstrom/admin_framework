<% @page_title = 'Change Password' %>

<% form_for(:admin_user, @admin_user, :url => admin_change_password_path, :builder => AdminFormBuilder) do |f| %>
    <%= f.password_field :current_password, :required => true %>
    <%= f.password_field :password, :required => true, :label => 'New Password' %>
    <%= f.password_field :password_confirmation, :required => true, :label => 'New Password Confirmation' %>
    <%= f.form_buttons { 
        f.submit('change') +
        f.cancel(:onclick => "document.location = '#{admin_path}'")
    } %>
<% end %>

<%= javascript_tag "$('form input[type=password]')[0].focus()" %>
