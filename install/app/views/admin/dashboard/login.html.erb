<% @page_title = 'Login' %>

<% form_for(:admin_user, @admin_user, :url => admin_login_path, :builder => AdminFormBuilder) do |f| %>
    <%= f.text_field :login, :required => true %>
    <%= f.password_field :password, :required => true %>
    <%= f.form_buttons { 
        f.submit('login') +
        f.cancel(:onclick => "document.location = '/'")
    } %>
<% end %>

<%= javascript_tag "$('form input[type=text]')[0].focus()" %>
