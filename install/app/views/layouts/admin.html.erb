<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Admin</title>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag 'admin/reset', 'admin/base', 'admin/forms'  %>
    <%= javascript_include_tag 'admin/base' %>
    <style type='text/css'>
      <%= yield :inline_styles %>
    </style>
    <%= yield :head %>
  </head>
  <body>

    <div id='page'>

      <div id='header'>
        <h1>Admin - <%= @page_title %></h1>

        <div class='links'>
          <%= image_tag 'admin/spinner.gif', :id => 'spinner', :style => 'display: none' %>
          <%= link_out_to 'Visit Site', '/' %>
          |
          <%= link_to 'Dashboard', admin_path %>
          |
          <%= link_to 'Log Out', admin_logout_path %>
        </div>

        <br clear="all"/>
      </div>

      <div id='content'>

        <div id='flashes'>
          <% flash.each_pair do |k,v| %>
            <div class='<%= k -%>'><%= v %></div>
          <% end %>
        </div>

        <%= yield %>

        <br clear="all"/>
      </div>

    </div>

  </body>
</html>
